<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/loading_view"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="horizontal">

    <ProgressBar
        android:id="@+id/loading_progress"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginRight="4dp"
        android:indeterminateDrawable="@drawable/list_footer_loading_progress"/>

    <TextView
        android:id="@+id/loading_text"
        style="@style/mRecycleViewBottomTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:text="@string/list_footer_loading"
        tools:ignore="RtlHardcoded"/>
    <!--android:textColor="@color/color_00"
    android:textSize="@dimen/sp_14"-->
</LinearLayout>